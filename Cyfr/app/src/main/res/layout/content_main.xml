<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rohan.cyfr.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/encrMessage"
        android:hint="Message..."
        android:textAlignment="center"
        android:layout_alignStart="@+id/decrButton"
        android:layout_marginStart="18dp"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Message:"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="#3f51b5"
        android:layout_alignBaseline="@+id/decrMessage"
        android:layout_alignBottom="@+id/decrMessage"
        android:layout_toStartOf="@+id/decrMessage"
        android:id="@+id/textView8"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Enter key value:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="20sp"
        android:textColor="#3f51b5"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp" />

    <Button
        android:text="Encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/encrButton"
        android:layout_below="@+id/encrKey"
        android:layout_centerHorizontal="true"
        android:elevation="24dp"
        android:backgroundTint="#00FFFF" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/decrMessage"
        android:hint="Message..."
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Message:"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:textColor="#3f51b5"
        android:layout_alignBaseline="@+id/encrMessage"
        android:layout_alignBottom="@+id/encrMessage"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Enter key value:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:textSize="20sp"
        android:textColor="#3f51b5"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/decrMessage"
        android:layout_alignStart="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/decrKey"
        android:hint="Key value (number)"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/decrButton"
        android:inputType="number" />

    <Button
        android:text="Decrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/decrButton"
        android:layout_below="@+id/decrKey"
        android:layout_alignStart="@+id/encrButton"
        android:elevation="24dp"
        android:backgroundTint="#00FFFF" />

    <TextView
        android:text="Nothing entered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:id="@+id/textView12"
        android:textSize="22sp"
        android:textColor="#3f51b5"
        android:saveEnabled="false"
        android:fontFamily="monospace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/encrKey"
        android:hint="Key value (number)"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
