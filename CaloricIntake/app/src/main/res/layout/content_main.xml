<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.rohan.practiceproject.MainActivity"
    tools:showIn="@layout/activity_main">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activityDrop"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_alignStart="@+id/enterAge"
        android:paddingTop="10dp"
        android:layout_alignTop="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView3"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/enterWeight"
        android:layout_alignBottom="@+id/enterWeight"
        android:layout_alignParentStart="true"
        android:textColor="#1b5e20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="#1b5e20"
        android:layout_below="@+id/enterWeight"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp"
        android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView5"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="#1b5e20"
        android:paddingTop="10dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="47dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/genderDrop"
        android:paddingTop="10dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/activityDrop"
        android:layout_alignBottom="@+id/textView5" />

    <TextView
        android:text="kg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp"
        android:textColor="#1b5e20"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/enterWeight"
        android:layout_marginEnd="31dp" />

    <TextView
        android:text="years"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp"
        android:textColor="#1b5e20"
        android:layout_alignBaseline="@+id/enterAge"
        android:layout_alignBottom="@+id/enterAge"
        android:layout_alignStart="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterAge"
        android:hint="Enter Age"
        android:textColor="#1b5e20"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignStart="@+id/enterWeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView8"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="#1b5e20"
        android:paddingTop="10dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterWeight"
        android:hint="Enter Weight"
        android:textColor="#1b5e20"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/enterHeight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity:"
        android:fontFamily="sans-serif-smallcaps"
        android:id="@+id/textView4"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:textColor="#1b5e20"
        android:paddingTop="10dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/enterAge"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enterHeight"
        android:hint="    Enter Height"
        android:textColor="#1b5e20"
        android:textAlignment="textStart"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginStart="22dp" />

    <TextView
        android:text="cm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="18sp"
        android:textColor="#1b5e20"
        android:layout_alignBaseline="@+id/enterHeight"
        android:layout_alignBottom="@+id/enterHeight"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterHeight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:id="@+id/calorieText"
        android:textSize="22sp"
        android:textColor="#1b5e20"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:text="0 cal" />

    <Button
        android:text="Calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/fab1"
        style="@style/Widget.AppCompat.Button"
        android:textStyle="normal|bold"
        android:textAlignment="center" />

</RelativeLayout>
